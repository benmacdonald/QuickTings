<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="60dp"
                    android:layout_height="112dp"
                    app:srcCompat="@drawable/ic_menu_gallery" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="229dp"
                            android:layout_height="match_parent"
                            android:layout_weight="13.63"
                            android:orientation="vertical"
                            android:paddingLeft="5dp"
                            android:paddingTop="7dp">

                            <TextView
                                android:id="@+id/productTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Beau's Lug Tread Lagered Ale"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/productType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Beer" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/favouriteButton"
                            android:layout_width="31dp"
                            android:layout_height="54dp"
                            android:layout_weight="2.73"
                            android:background="@drawable/custom_favourite_button" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.40"
                            android:orientation="vertical"
                            android:paddingLeft="5dp">

                            <TextView
                                android:id="@+id/productPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$24.99"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/productVolume"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="500 mL bottle" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/addToCartButton"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:background="@drawable/round_borders"
                            android:text="Add to Cart" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/wavesImage"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.20"
                app:srcCompat="@android:drawable/ic_menu_gallery" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>